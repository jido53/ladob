{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body_centro %}
    <form role="form" id="Usuario">
        <div class="form-group">

            <label for="exampleInputEmail1">
                Usuario
            </label>
            <input class="form-control" type="text" placeholder="{{ app.user.usrCod }}" readonly>
        </div>

        <div class="form-group">

            <label for="exampleInputEmail1">
                Correo
            </label>
            <input class="form-control" type="text" placeholder="{{ app.user.usrEmail }}" readonly>
        </div>
        <div class="form-group">

            <label for="exampleInputPassword1">
                Nombre
            </label>
            <input class="form-control" type="text" placeholder="{{ app.user.usrNombre }}" readonly>
        </div>

        <div class="checkbox">

            <label>
                <input type="checkbox" checked="{{ app.user.usrHabil }}"disabled/> Habilitado
            </label>
        </div>

    </form>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        {#<div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>#}
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="listado" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th scope="col">Dependencia</th>
                        <th scope="col">Cargo</th>


                    </tr>
                    </thead>
                    <tbody>
{#                        {{ dump(app.user.depUsrCars) }}#}
                    {% for a in app.user.depUsrCars %}
                        <tr>

                            <td>{{ a.dependencia.depDescr }}</td>
                            <td>{{ a.cargo.carDescr }}</td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
