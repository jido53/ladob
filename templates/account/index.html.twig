            <div class="table-responsive">
                <table class="table table-bordered" id="listado" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th scope="col">Dependencia</th>
                        <th scope="col">Cargo</th>
                        <th scope="col">Cambiar Perfil</th>


                    </tr>
                    </thead>
                    <tbody>
{#                        {{ dump(app.user.depUsrCars) }}#}
                    {% for a in app.user.depUsrCars %}
                        <tr>

                            <td>{{ a.dependencia.depDescr }}</td>
                            <td>{{ a.cargo.carDescr }}</td>
                            <td>
