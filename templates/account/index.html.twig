{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body_centro %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Datos del Usuario</h6>
        </div>
        <div class="card-body">
            <form role="form" id="Usuario">
                <div class="form-group">

                    <label for="exampleInputEmail1">
                        Usuario
                    </label>
                    <input class="form-control" type="text" placeholder="{{ app.user.usrCod }}" readonly>
                </div>

                <div class="form-group">

                    <label for="exampleInputEmail1">
                        Correo
                    </label>
                    <input class="form-control" type="text" placeholder="{{ app.user.usrEmail }}" readonly>
                </div>
                <div class="form-group">

                    <label for="exampleInputPassword1">
                        Nombre
                    </label>
                    <input class="form-control" type="text" placeholder="{{ app.user.usrNombre }}" readonly>
                </div>
                <div class="form-group">

                    <label for="exampleInputPassword1">
                        Perfil
                    </label>
                    <input class="form-control" type="text" placeholder="{{ app.session.get('perfil') }}" readonly>
                </div>
                <div class="checkbox">

                    <label>
                        <input type="checkbox" checked="{{ app.user.usrHabil }}"disabled/> Habilitado
                    </label>
                </div>

            </form>
            {{ form_start(ducForm) }}
            {{ form_row(ducForm.dependencia, {
                label: 'Dependencia',
                disabled: true
            }) }}

            {{ form_row(ducForm.cargo, {
                label: 'Cargo',
                disabled: true
            }) }}


{#            {{ form_end(ducForm) }}#}

        </div>
    </div>



    <div>

    </div>

